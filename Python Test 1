strvar = "Cografya Guzeldir"
print(strvar.upper())    #upper komutu harfleri buyutuyor                COGRAFYA GUZELDIR
print(strvar.lower())    #lower komutu harfleri kucultuyor.              cografya guzeldir
print(strvar.split())                                                    ['Cografya', 'Guzeldir']
print(strvar.split("a"))                                                 ['Cogr', 'fy', ' Guzeldir']
print(strvar.split(sep="a", maxsplit=1))                                 ['Cogr', 'fya Guzeldir']
print(strvar.split(sep="r", maxsplit=1))                                 ['Cog', 'afya Guzeldir']



strvar = "kodlama eglenceli"   
print(strvar.endswith("i"))        #endswith=ile biter            True
print(strvar.endswith("e"))                                       False
print(strvar.endswith("celi"))                                    True
print(strvar.endswith("ama"))                                     False
print(strvar.find("c"))                                           13
print(strvar.find("e"))                                           8
print(strvar.replace("kodlama" ,"formula" ))                      furmula eglenceli
print(strvar.capitalize())                                        Kodlama eglencei   
print(strvar.lstrip("kod"))                                       lama eglenceli
print(strvar.partition("lenceli"))                                ('kodlama eg', 'lenceli', '')               
print(strvar.removeprefix("kodla"))   #ön eki eki sil             ma eglenceli
print(strvar.removesuffix("eli"))     #son eki sil                kodlama eglenc
print(strvar.startswith("kod"))                                   True
print(strvar.startswith("eg"))                                    False
print(strvar.swapcase())                                          KODLAMA EGLENCELI               #swapcase büyük harfleri kücük, kücük harfleri buyuk yapar
print(strvar.title())                                             Kodlama Eglenceli
